    @Html.HiddenFor(model => model.LibraryLocationID)
    @Html.HiddenFor(model => model.CalculatedReturnDate)
    

    <div class="form-group">
        @Html.LabelFor(model => model.ItemName, htmlAttributes: new { @class = "control-label col-md-6" })
