<script src="~/Scripts/UIAndDataValidation/BookReturnViewScript.js"></script>

@model DataViewModels.ItemBorrowAddEditView


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.ItemBorrowID)
    @Html.HiddenFor(model => model.ItemID)
    @Html.HiddenFor(model => model.ItemPartyID)
